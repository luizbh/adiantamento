<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="imagem"></div>
    <div id="container">
      <ul id="nav-aba">
          <li><a class="lista1" href="#primeiro">Lista de Servidores</a></li>
          <%= link_to "Novo Servidor", new_lista_path, :class => "servidor" %><hr />
      </ul> 
     
     <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>

      <div id="primeiro" class="aba">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield :primeiro %>
    </div>

    <div id="segundo" class="aba">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield :segundo %>
    </div>

    </div>
  </body>
</html>
